<vnx xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="/usr/share/xml/vnx/vnx-2.00.xsd">
  <global>
    <version>2.0</version>
    <scenario_name>dhcp-scenario</scenario_name>
    <automac/>
    <vm_mgmt type="none" />
    <!--vm_mgmt type="private" network="10.250.0.0" mask="24" offset="200">
       <host_mapping />
    </vm_mgmt-->
    <vm_defaults>
        <console id="0" display="no"/>
        <console id="1" display="yes"/>
    </vm_defaults>
  </global>

  <net name="Net0" mode="virtual_bridge" />

  <vm name="s1" type="libvirt" subtype="kvm" os="linux" exec_mode="sdisk">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_ubuntu-13.10</filesystem>
    <mem>256M</mem>
    <if id="1" net="Net0">
      <ipv4>10.0.0.1/24</ipv4>
    </if>
    
    <filetree seq="on_boot, start" root="/etc/">/usr/share/vnx/examples/conf/ahost/resolv.conf</filetree>
    <filetree seq="on_boot, start" root="/etc/nagios/">/usr/share/vnx/examples/conf/ahost/nrpe.cfg</filetree>
    <!-- copiamos fichero para nagios-nrpe -->
    <!--filetree seq="on_boot, start" root="/usr/lib/nagios/plugins/">/home/vmateos/Documentos/tesis/config_files/check_ssh_faillogin</filetree-->
    <filetree seq="copyfile" root="/tmp">/usr/share/vnx/examples/conf/txtfile</filetree>
    <filetree seq="start-www" root="/var/www">/usr/share/vnx/examples/conf/txtfile</filetree>
    <exec seq="on_boot, start" type="verbatim">chmod 644 /etc/resolv.conf</exec>
    <exec seq="on_boot, start" type="verbatim">/etc/init.d/bind9 restart</exec>
    <exec seq="on_boot, start" type="verbatim">chmod 644 /etc/nagios/nrpe.cfg</exec>
    <exec seq="on_boot, start" type="verbatim">chmod 644 /var/log/auth.log</exec>
    <!--exec seq="on_boot, start" type="verbatim">chmod 666 /etc/nagios/check_ssh_faillogin.dat</exec>-->
    <exec seq="on_boot, start" type="verbatim">/etc/init.d/nagios-nrpe-server restart</exec>
    <exec seq="movefile" type="verbatim"  ostype="system">mv /tmp/vnx.txt /root/</exec>
    <exec seq="start-www" type="verbatim"  ostype="system">chmod 644 /var/www/*</exec>
    <exec seq="start-www" type="verbatim" ostype="system">service apache2 start</exec>
    <exec seq="stop-www" type="verbatim" ostype="system">service apache2 stop</exec>

    <!-- Start dhcp server -->
    <exec seq="on_boot" type="verbatim" ostype="system">service isc-dhcp-server start</exec>
  </vm>


  <vm name="h1" type="lxc">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc-ubuntu13.10</filesystem>
    <if id="1" net="Net0">
    </if>
    <route type="ipv4" gw="10.0.0.2">default</route>
    <!-- Configure eth1 interface -->
    <!--exec seq="on_boot" type="verbatim" ostype="system">dhclient eth1</exec> -->
  </vm>

  <vm name="h2" type="lxc">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc-ubuntu13.10</filesystem>
    <if id="1" net="Net0">
    </if>
    <!-- Configure eth1 interface -->
    <!--exec seq="on_boot" type="verbatim" ostype="system">dhclient eth1</exec> -->
  </vm>

  <vm name="h3" type="lxc">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc-ubuntu13.10</filesystem>
    <if id="1" net="Net0">
    </if>
    <!-- Configure eth1 interface -->
    <!--exec seq="on_boot" type="verbatim" ostype="system">dhclient eth1</exec> -->
  </vm>
  <host>
    <hostif net="Net0">
       <ipv4>10.0.0.2/24</ipv4>
    </hostif>
  </host>

</vnx>
